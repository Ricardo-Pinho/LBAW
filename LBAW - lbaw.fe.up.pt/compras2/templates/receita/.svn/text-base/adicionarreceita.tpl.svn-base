{include file='header.tpl'}<script type="text/javascript" src="../../js/tablecheck.js"></script><script type="text/javascript" src="../../js/validations.js"></script>  <h1>Adicionar Receita</h1>  <form action="../receita/adicionarreceita_action.php" onsubmit="return validateReceita1(this);" method="post">    <div class="border">		<input type="hidden" name="s_id" value="{$s_id}" />		<p><a class="navtext">Escolha a que casa deseja adicionar esta receita:</a></p>		<p class="marginbottom"><select name="casa" id="casa" size="1">				{foreach from=$casas item=casa}					<option value={$casa.id}>{$casa.nome}</option>				{/foreach}			   </select></p>		<span class="error">{$s_errors.casa}</span>	</div>	<div class="border">	<p><a class="navtext">Nome:</a></p>    <p class="marginbottom"><input type="text" size="32" maxlength="32" name="nome" id="nome" required="required"/></p>    </div>	<div class="border">	<p><a class="navtext">Tempo de preparo(min):</a></p>    <p class="marginbottom"><input type="text" size="10" maxlength="3" name="tempo" id="tempo" required="required"/></p>    </div>	<div class="border">	<p><a class="navtext">Quantidade de pessoas:</a></p>    <p class="marginbottom"><input type="text" size="10" name="quant" id="quant" required="required"/></p>    </div>	<div class="border">	<p><a class="navtext">Modo de preparo:</a></p>    <p class="marginbottom"><textarea rows="5" cols="40" maxlength="512" name="preparo" id="preparo" required="required"></textarea></p>    </div>	<div class="border">	<p><a class="navtext">Tipo:</a></p>    <p class="marginbottom"><input type="text" size="30" maxlength="32" name="tipo" id="tipo" required="required"/></p>    </div>	<div class="border">	<p><a class="navtext">Privado:</a> 		<select name="privado_opt" id="privado_opt" size="1">			<option value="101">Sim			<option value="102">Nao		</select>	</p>	</div>	<p>	<a class="navtext">Ingredientes:</a><input class="options" type="button" value="+" onclick="javascript:addRow('lista_ingredientes')" />	<input class="options" type="button" value="-" onclick="javascript:deleteRow('lista_ingredientes')" />	</p>	<div class="border">		<table id="lista_ingredientes">			<tr>				<td><input type="checkbox" name="chk[]"/><a class="navtext">Ingrediente:</a></td>				<td>					<select name="ingredientes[]" size="1">					{foreach from=$ingredientes item=ingrediente}						<option value="{$ingrediente.id}">{$ingrediente.nome} ({$ingrediente.unidade_medida})					{/foreach}					</select>				</td>				<td>					<a class="navtext">Quantidade:</a>					<a class="marginbottom"><input type="text" size="10" name="txt[]" required="required"/></a>				</td>			</tr>		</table>	</div>			<p><input type="submit" class="options" value="Adicionar" /></p>  </form>{include file='footer.tpl'}