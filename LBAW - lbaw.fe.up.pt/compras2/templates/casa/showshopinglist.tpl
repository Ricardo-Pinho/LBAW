{include file='header.tpl'}   <h1>Listas de Compras</h1>  {if {$isempty}==false}{if {$recon}!=null}  <p class="title">Ingredientes</p>	<table class="centertable">	<tr>	  <th class="center" rowspan="1">Nome</th>	  <th class="center" rowspan="1">Tipo</th>	  <th class="center" rowspan="1">Quantidade a Comprar</th>	  <th class="center" rowspan="1">Unidade de Medida</th>	</tr>	{foreach from=$recon item=ingrediente}			<tr class="check">			  <td class="centerblue"><a class="underline" href="../produtos/veringrediente.php?id={$ingrediente.id}">			  {$ingrediente.nome}</a></td>			  {if {$ingrediente.tipo}==null}			  <td class="center">Outro</td>			  {else}			  <td class="center">{$ingrediente.tipo}</td>			  {/if}			  {if {$ingrediente.qcompra}<0}			  <td class="center">0</td>			  {else}			  <td class="center">{$ingrediente.qcompra}</td>			  {/if}			  <td class="center">{$ingrediente.unidade_medida}</td>		</tr>	{/foreach}	</table>	<p></p>{/if}{if {$getproducts}!=null}<p class="title">Produtos</p>	<table class="centertable">	<tr>	  <th class="center" rowspan="1">Nome</th>	  <th class="center" rowspan="1">Quantidade a Comprar</th>	  <th class="center" rowspan="1">Unidade de Medida</th>	</tr>	{foreach from=$getproducts item=produto}			<tr class="check">			  <td class="centerblue"><a class="underline" href="../produtos/verproduto.php?id={$produto.id}">			  {$produto.nome}</a></td>			  {if {$produto.qcompra}<0}			  <td class="center">0</td>			  {else}			  <td class="center">{$produto.qcompra}</td>			  {/if}			  <td class="center">{$produto.unidade_medida}</td>		</tr>	{/foreach}	</table>	<p></p>{/if}{else}	 		<img class="center" src="../../img/happyface.gif" alt="Happyface" width="300" height="300"/>  			<p class="center">Nao precisa de Comprar Nada!</p>{/if}   <a class="options" href="vercasa.php?id={$casa.id}">Voltar</a>{include file='footer.tpl'}